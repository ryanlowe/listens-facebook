  <table style="margin-bottom: 16px;">
    <tr>
      <td><label for="album_artist">Artist</label></td>
      <td><%= text_field 'album', 'artist' %></td>
    </tr>
    <tr>
      <td><label for="album_title">Title</label></td>
      <td><%= text_field 'album', 'title' %></td>
    </tr>
    <tr>
      <td colspan="2" style="padding-top:16px;"><h2>Optional</h2></td>
    </tr>
    <tr>
      <td><label for="album_year">Year</label></td>
      <td><%= text_field 'album', 'year' %></td>
    </tr>
    <tr>
      <td><label for="album_year">Previous listen count</label></td>
      <td><%= text_field 'album', 'previous_listen_count' %></td>
    </tr>
    <tr>
      <td valign="top" style="padding-top:4px;"><label for="album_recommended_by">Recommended by</label></td>
      <td>
        <%= '<div style="margin:4px 0px;">'+person_name(@album.recommended_by)+'</div>' if @album.recommended_by %>
        <fb:friend-selector uid="<%= @uid %>" name="recommended_by" idname="album[recommended_by]"/>
      </td>
    </tr>
  </table>