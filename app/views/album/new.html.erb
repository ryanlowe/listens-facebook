<% if @errors -%>
<fb:error>
  <fb:message>Couldn't Add the Album</fb:message>
  <%= @errors %>
</fb:error>
<% end -%>
<% form_tag :action => 'create' do %>
<%= render :partial => 'album/form' %>
  <%= submit_tag 'Add Album' %>
  &nbsp; &laquo; <%= link_to 'Cancel', :controller => 'album', :action => 'list' %>
<% end -%>