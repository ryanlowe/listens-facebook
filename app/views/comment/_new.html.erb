<div class="add-comment" style="margin-top:16px;">
  <h4 style="padding-bottom:4px;">Add a comment</h4>
  <% form_tag :controller => 'comment', :action => 'create', :album_id => @album.id do %>
    <%= text_area 'comment', 'body', :size => "60x8" %><br/>
    <br/>
    <%= submit_tag 'Add Comment' %>
<% unless @omit_add_comment_cancel -%>
    &nbsp; &laquo; <%= link_to 'Cancel, back to album', url_for_public_album(@album) %>
<% end -%>
  <% end -%>
</div>