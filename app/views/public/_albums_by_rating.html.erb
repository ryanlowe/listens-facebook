  <div style="padding:9px; border:1px solid #ccc;background-color:#fff;">
    <h2>By Rating</h2>
    <div style="margin-top:8px;color:#333;">
<% if @rated.size < 1 %>
    No albums have been added by <%= person_first_name(@uid) %> yet
<% else -%>
    <table border="0" cellspacing="0" cellpadding="0">
<%   for album in @rated -%>
      <tr><td style="text-align:right;vertical-align:top;padding-right:4px;"><%= album.rating_to_s %></td><td><%= link_public_album(album) %>&nbsp;<%= listen_count(album) %></td></tr>
<%   end -%>
    </table>
<% end -%>
    </div>
  </div>